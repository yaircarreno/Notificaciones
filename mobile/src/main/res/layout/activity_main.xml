<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/blue_gray"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_notification"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/button_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/button"
        android:layout_below="@+id/text"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/text_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_notification_action"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text"
        android:layout_below="@+id/button_notification"
        android:layout_margin="5dp"/>

    <ImageView
        android:id="@+id/button_notification_with_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/button"
        android:layout_below="@+id/text_two"
        android:layout_margin="5dp" />

</RelativeLayout>
